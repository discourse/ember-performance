{{#if this.report}}
  <BenchmarkReport @report={{this.report}} />
{{/if}}

<h4>
  Tests:
  <button {{action "selectAllTests"}} type="button" class="btn btn-default btn-xs">All</button>
  <button {{action "selectNoTests"}} type="button" class="btn btn-default btn-xs">None</button>
</h4>

<div class="form-group">
  {{#each this.model as |test|}}
    <div>
      <label>
        <input type="checkbox"
               checked={{test.isEnabled}}
               onchange={{action (mut test.isEnabled) value="target.checked"}}>
        {{test.name}}
      </label>
    </div>
  {{/each}}
</div>

<h4>
  Versions:
  <button {{action "selectAllVersions"}} type="button" class="btn btn-default btn-xs">All</button>
  <button {{action "selectNoVersions"}} type="button" class="btn btn-default btn-xs">None</button>
</h4>
<div class="form-group">
  {{#each this.emberVersions as |emberVersion|}}
    <div>
      <label>

        <input type="checkbox"
               checked={{emberVersion.isEnabled}}
               onchange={{action (mut emberVersion.isEnabled) value="target.checked"}}>

        {{emberVersion.name}}
        {{#if emberVersion.isCustom}}
          {{#if emberVersion.isEnabled}}
            <br />PATH: <Input @value={{emberVersion.path}} />
            <br />COMPILER PATH: <Input @value={{emberVersion.compilerPath}} />
          {{/if}}
        {{/if}}
      </label>
    </div>
  {{/each}}
</div>

<label>Feature Flags</label>
{{#if this.featureFlags}}
  <table class='table'>
    <tbody>
    {{#each featureFlags as |featureFlag|}}
      <tr>
        <td style='width: 20%'>{{featureFlag}}</td>
        <td>
          <button type="button" class="btn btn-danger btn-xs" {{action "removeFeature" featureFlag}}>remove</button>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{/if}}
<div class='form-group'>
  <input value={{this.newFlagName}}
         placeholder="Flag Name"
         onchange={{action (mut this.newFlagName) value="target.value"}} />
  <button type="button" class="btn :btn-default :btn-xs {{if this.addFeatureDisabled 'disabled'}}"
    {{action "addFeature"}}>Add Feature
  </button>
</div>

<div class='footer'>
  <button type="button" class='btn btn-primary' {{action "start"}} disabled={{this.cantStart}}>Run Tests</button>
  <button type="button" class='btn btn-primary' {{action "profile"}} disabled={{this.cantStart}}>Run Tests with Profile</button>
</div>
